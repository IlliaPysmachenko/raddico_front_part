{
  "extends": [
    "next/core-web-vitals",
    "airbnb",
    "airbnb-typescript"
  ],
  "parserOptions": {
    "project": "./tsconfig.json"
  },
  "overrides": [
    {
      // feel free to replace with your preferred file pattern - eg. 'src/**/*Slice.ts'
      "files": [
        "src/redux/loading/loading.ts",
        "src/redux/searchBlockSlice/searchBlockSlice.ts",
        "src/redux/studiesSlice/studiesSlice.ts"
      ],
      // avoid state param assignment
      "rules": {
        "no-param-reassign": [
          "error",
          {
            "props": false
          }
        ]
      }
    }
  ]
}
