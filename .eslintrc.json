{
  "extends": [
    "next/core-web-vitals",
    "airbnb",
    "airbnb-typescript"
  ],
  "parserOptions": {
    "project": "./tsconfig.json"
  },
  "rules": {
    "react/function-component-definition": "off",
    "max-len": ["error", {"code": 140}],
    "jsx-a11y/click-events-have-key-events": "off",
    "jsx-a11y/no-static-element-interactions": "off",
    "arrow-body-style": "off",
    "react/jsx-props-no-spreading": "off"
  },
  "overrides": [
    {
      // feel free to replace with your preferred file pattern - eg. 'src/**/*Slice.ts'
      "files": [
        "src/redux/loading/loading.ts",
        "src/screens/home/searchPanelBlock/slice/searchBlockSlice.ts",
        "src/screens/home/studiesBlock/slice/studiesSlice.ts",
        "src/screens/home/studiesBlock/slice/thunkCreators.ts",
        "src/screens/configurationPage/aeTitlesTab/slice/aeTitlesSlice.ts"
      ],
      // avoid state param assignment
      "rules": {
        "no-param-reassign": [
          "error",
          {
            "props": false
          }
        ]
      }
    }
  ]
}
