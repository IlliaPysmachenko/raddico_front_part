{
  "extends": [
    "next/core-web-vitals",
    "airbnb",
    "airbnb-typescript"
  ],
  "parserOptions": {
    "project": "./tsconfig.json"
  },
  "rules": {
    "react/function-component-definition": "off",
    "max-len": ["error", {"code": 120}]
  },
  "overrides": [
    {
      // feel free to replace with your preferred file pattern - eg. 'src/**/*Slice.ts'
      "files": [
        "src/redux/loading/loading.ts",
        "src/screens/home/searchPanelBlock/slice/searchBlockSlice.ts",
        "src/screens/home/studiesBlock/slice/studiesSlice.ts",
        "src/screens/home/studiesBlock/slice/thunkCreators.ts"
      ],
      // avoid state param assignment
      "rules": {
        "no-param-reassign": [
          "error",
          {
            "props": false
          }
        ]
      }
    }
  ]
}
